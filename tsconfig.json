{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@infrastructure/*": ["src/item/infrastructure/*"],
      "@auth/*": ["src/microservices/auth/*"],
      "@customer/*": ["src/microservices/customer/*"],
      "@mail/*": ["src/microservices/mail/*"],
      "@utils/*": ["src/utils/*"],
      "@test/*": ["test/*"],
      "@security/*": ["src/security/*"],
    }
  }
}
